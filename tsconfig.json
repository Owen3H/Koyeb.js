{
    "compilerOptions": {
        "module": "ES2022",
        "lib": ["ES2022"],
        "target": "ES2017",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "types": ["node"],
        "esModuleInterop": true,
        "importHelpers": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": false,
        "declarationDir": "dist/types",
        "declaration": true
    },
    "include": ["src"]
}