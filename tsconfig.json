{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2017",
        "moduleResolution": "NodeNext",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "types": ["node"],
        "esModuleInterop": true,
        "importHelpers": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": false,
        "strictFunctionTypes": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "tslib" : ["./node_modules/tslib/tslib.d.ts"]
        }
    },
    "include": ["src"],
    "exclude": [
        "vitest.config.ts",
        "typedoc.json",
        "node_modules", 
        "docs",
        "dist",
        "tests"
    ]
}