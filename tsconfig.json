{
    "compilerOptions": {
        "module": "ES6",
        "lib": ["es6"],
        "target": "ES2020",
        "outDir": "dist",
        "moduleResolution": "node",
        "allowJs": true,
        "noImplicitAny": true,
        "types": ["node"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "exclude": ["test-pkg", "node_modules"],
    "ts-node": {
        "esm": true,
        "transpileOnly": true,
        "files": true
    }
}