{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2017",
        "outDir": "dist",
        "moduleResolution": "node",
        "allowJs": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "types": ["node"],
        "typeRoots": [
            "src/interfaces",
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "include": ["src"]
}