{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2017",
        "moduleResolution": "NodeNext",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "types": ["node"],
        "esModuleInterop": true,
        "importHelpers": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": false,
        "incremental": true,
        "strictFunctionTypes": true,
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "tslib" : ["./node_modules/tslib/tslib.d.ts"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "docs", "dist", "tests"]
}